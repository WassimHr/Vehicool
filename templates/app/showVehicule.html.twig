{% extends 'base.html.twig' %}


{% block title %}
    Show vehicule
{% endblock %}


{% block body %}
<div class="my-4">
    <div class="card text-white bg-dark my-5 text-center m-auto" style="max-width: 20rem;">
  <div class="card-header"> Titre : {{vehicule.titre}}</div>
  <div class="card-body">
    <h4 class="card-title">Marque : {{vehicule.marque}}</h4>
    <h4 class="card-title">Modele : {{vehicule.modele}}</h4>
    <h4 class="card-text"> Description : {{vehicule.description}}</h4>
  </div>  
 <a class="btn btn-success" href="{{ path('commandeAdd', {'id': vehicule.id}) }}">Passer commande</a>
  </div>
{% endblock %}