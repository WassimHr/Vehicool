{% extends 'base.html.twig' %}

{% block title %}
	Voitures
{% endblock %}


{% block body %}
	<h1 class="text-center m-3">Liste des voitures</h1>
	<div class="container col-12">
		<table class="table table-dark m-5">
			<thead>
				<tr>
					<th>#</th>
					<th>Titre</th>
					<th>Marque</th>
					<th>Modele</th>
					<th>Description</th>
					<th>Photo</th>
					<th>Créer le</th>
					<th>Option</th>

				</tr>
			</thead>
			<tbody>
				{% for voiture in voitures %}
					<tr>
						<td>{{ voiture.id }}</td>
						<td>{{ voiture.titre }}</td>
						<td>{{ voiture.marque}}</td>
						<td>{{ voiture.modele}}</td>
						<td>{{ voiture.description}}</td>
						<td><img src="{{voiture.photo}}" alt="" width="50" height="50"></td>
						<td>{{ voiture.dateEnregistrement|date("d/m/Y à H:i:s") }}</td>
						<div>
							<td>
								<a href="{{ path('voitureShow', {id: voiture.id})}}">
									<i class="fa fa-eye"></i>
								</a>
							</td>
							{% if is_granted('ROLE_ADMIN') %}
								<td>
									<a href="{{ path('adminEdit', {id: voiture.id})}}">
										<i class="fa fa-edit"></i>
									</a>
								</td>
								<td>
									<a href="{{ path('adminEdit', {id: voiture.id})}}">
										<i class="fa fa-trash"></i>
									</a>
								</td>


							{% endif %}
						</div>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
