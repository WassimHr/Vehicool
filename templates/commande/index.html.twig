{% extends 'base.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
<h1 class="text-center my-3">Listes des commandes</h1>
	<div class="col-8 m-auto">
		<table class="table table-dark m-5">
			<thead>
				<tr>
					<th>Commande</th>
					<th>Membre</th>
					<th>Vehicule</th>
					<th>Date de depart</th>
					<th>Date de fin</th>
					<th>Date et heure d'enregistrement</th>
					<th>Prix total</th>


				</tr>
			</thead>
			<tbody>
				{% for commande in commandes %}
					<tr>
						<td>{{commande.id}}</td>
						<td>{{ commande.user.nom}}
							{{ commande.user.prenom}}</td>
						<td>{{ commande.vehicule.marque}}
							-
							{{ commande.vehicule.modele}}</td>

						<td>{{ commande.dateHeureDepart|date("d/m/Y à H:i:s") }}</td>
						<td>{{ commande.dateHeureFin|date("d/m/Y à H:i:s") }}</td>
						<td>{{ commande.dateEnregistrement|date("d/m/Y à H:i:s") }}</td>
						<td>{{commande.prixTotal}}
							€</td>


					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
