{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<h1 class="text-center m-3">Liste des utilisateurs</h1>
<div class="container col-6">
<table class="table table-dark m-5">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Créer le</th>
                <th>Option</th>
                
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom}}</td>
                <td>{{ user.pseudo}}</td>
                <td>{{ user.email}}</td>
                <td>{{ user.dateEnregistrement|date("d/m/Y à H:i:s") }}</td>
                <td><a href="{{path('roleEdit', {id: user.id} )}}"><i class="fa fa-edit"></i></a></td>

            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}

 